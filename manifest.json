{
	"manifest_version": 2,
	"name": "Open end",
	"version": "1.0.0",
	
	"default_locale": "en",
	"description": "Hides the progress bars and length of videos on Twitch.tv and YouTube.com to prevent spoilers when watching sports or esports.",
	"icons": {
		"16": "imgs/icon_16.png"
	},
	
	"author": "",
	"content_scripts": [
		{
			"matches": ["*://*.twitch.tv/*", "file://*/*"],
			"css": ["content_scripts/twitch.tv.css"],
			"js": ["content_scripts/twitch.tv.js"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": true
	},
	"permissions": ["storage", "tabs"],
	"web_accessible_resources": ["imgs/*", "options/options.html"]
}