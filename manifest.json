{
    "manifest_version": 2,
    "name": "Open End",
    "version": "1.0.0",
    "default_locale": "en",
    "description": "__MSG_manifest_description__",
    "icons": {
        "16": "imgs/icon_black_16.png",
        "48": "imgs/icon_black_48.png",
        "128": "imgs/icon_black_128.png"
    },
    "author": "",
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "css": ["content_scripts/twitch.tv.css"],
            "js": ["common/common.js", "content_scripts/twitch.tv.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        "imgs/*",
        "options/options.html"
    ]
}