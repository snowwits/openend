{
    "manifest_version": 2,
    "name": "Open End",
    "version": "1.0.0",
    "default_locale": "en",
    "description": "__MSG_manifest_description__",
    "icons": {
        "16": "imgs/icon_twitch-purple_16.png",
        "32": "imgs/icon_twitch-purple_32.png",
        "64": "imgs/icon_twitch-purple_64.png",
        "128": "imgs/icon_twitch-purple_128.png"
    },
    "author": "snowwits@gmail.com",
    "browser_action": {
        "default_icon": {
            "16": "imgs/icon_twitch-purple_16.png",
            "32": "imgs/icon_twitch-purple_32.png",
            "64": "imgs/icon_twitch-purple_64.png",
            "128": "imgs/icon_twitch-purple_128.png"
        },
        "default_popup": "browser_action/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "css": ["content_scripts/twitch.tv.css"],
            "js": ["common/common.js", "content_scripts/twitch.tv.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        "imgs/*",
        "options/options.html"
    ]
}